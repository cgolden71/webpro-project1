

.body{
    background-image: url('casinobg.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed;  
    background-size: cover;
}


.container {
  margin-left: 300px;
}

.box {
  border-radius: 5px;
  display: inline-block;
  height: 80px;
  margin: 20px;
  width: 80px;
  text-align: center;
}
  
  .box:hover  {
    transform: scale(1.4);
  }


.box1 {
  background: steelblue;
  transition: all 1s;
}

.box2 {
  background: lightcoral;
  transition: all 1s 0.5s;
}

.box3 {
  background: lightgoldenrodyellow;  
  transition: all 1s 0.5s;
}

.box4 {
    background: greenyellow;  
    transition: all 1s 0.5s;
  }

  .box5 {
    background: plum;  
    transition: all 1s 0.5s;
  }

  .box6 {
    background:orange ;  
    transition: all 1s 0.5s;
  }

  .box7 {
    background: cornsilk;  
    transition: all 1s 0.5s;
  }
  #hp  {
    float: left;    
     margin: 0 15px 0 0;
    }
	
	.wheel{
	max-width:100%;
	height:auto;
    }

.slots{
    display: flex;
    padding: auto;
    margin: auto;
}


.square1 {
    background-image: url('card1.png');
    border-radius: 3px;
    height: 260px;
    margin: 100px;
    position: absolute;
    transition: transform 0.8s;
    width: 210px;
  }
  
  .square2 {
    background-image: url('card2.png');
    border-radius: 3px;
    height: 260px;
    width: 210px;
    margin: 100px;
    transition: transform 0.8s;
    position: absolute;
  }
    
  .square2:hover {
        transform: translate(50px, 50px);
    
  }
    
  .roulette {
    border-radius: 2% 50%;
    height: 100px;
    width: 100px;
    margin: 100px;
    transition: all 3s;
    transition-timing-function: ease-in-out;
  }
  .img {
    width:30%;
    border-radius: 50%
  }
  
    
    .roulette:hover {
      transform: rotate(1080deg);
  }
  
  .roulette{
    display: flex;
    padding: auto;
    margin: auto;
}

#left{
	display:flex;
	flex-basis: 33%;

}

#right{
	display:flex;
	flex-basis: 67%;
}